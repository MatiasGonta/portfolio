---
import { languages } from '@i18n/ui';
import { Image } from 'astro:assets';
import SpanishFlag from '@assets/flags/es.svg';
import EnglishFlag from '@assets/flags/gb.svg';
---

<ul class="w-fit h-full flex gap-5 items-center">
    {Object.entries(languages).map(([lang, label]) => (
        <li>
            <a href={`/${lang}`} class="group size-full flex justify-center items-center gap-1">
                <div class="relative w-[18px] h-[14px] overflow-hidden border border-[#ccc] rounded-sm">
                    <Image
                        src={label === 'en' ? EnglishFlag : SpanishFlag}
                        alt="gb-flag"
                        class="absolute select-none transition-opacity duration-300 group-hover:opacity-75 group-focus-visible:opacity-75"
                        format="avif"
                        width={17}
                        height={15}
                    >
                </div>
                <span class="transition-color duration-300 group-hover:text-primary-light group-focus-visible:text-primary-light">{label}</span>
            </a>
        </li>
    ))}
</ul>