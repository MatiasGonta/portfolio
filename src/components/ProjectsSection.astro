---
import TechNav from "./TechNav.astro";
import ProjectsIcon from "@icons/section/Projects.icon.astro";
import JavaScriptIcon from "@icons/tech/JavaScript.icon.astro";
import TypeScriptIcon from "@icons/tech/TypeScript.icon.astro";
import AstroIcon from "@icons/tech/Astro.icon.astro";
import TailwindIcon from "@icons/tech/Tailwind.icon.astro";
import NodeJSIcon from "@icons/tech/NodeJS.icon.astro";
import ExpressIcon from "@icons/tech/Express.icon.astro";
import MongoDBIcon from "@icons/tech/MongoDB.icon.astro";
import ReactIcon from "@icons/tech/React.icon.astro";
import ReduxIcon from "@icons/tech/Redux.icon.astro";
import NextjsIcon from "@icons/tech/Nextjs.icon.astro";
import HtmlIcon from "@icons/tech/Html.icon.astro";
import CssIcon from "@icons/tech/Css.icon.astro";
import SassIcon from "@icons/tech/Sass.icon.astro";
