        repositoryUrl: "https://github.com/MatiasGonta/sabrina-ecommerce-fullstack-app",
        technologies: [
            { name: Technologies.NODE, class: "hover:text-node", icon: NodeJSIcon },
            { name: Technologies.EXPRESS, class: "hover:text-express", icon: ExpressIcon },
            { name: Technologies.MONGODB, class: "hover:text-mongodb", icon: MongoDBIcon },
            { name: Technologies.TYPESCRIPT, class: "hover:text-typescript", icon: TypeScriptIcon },
            { name: Technologies.REACT, class: "hover:text-react", icon: ReactIcon },
            { name: Technologies.REDUX, class: "hover:text-redux", icon: ReduxIcon },
            { name: Technologies.SASS, class: "hover:text-sass", icon: SassIcon },
        ],
    },
    {
        name: "Sunshine Weather",
        description: 'Sunshine Weather es una aplicación web que proporciona información meteorológica para cualquier lugar del mundo. Los usuarios pueden buscar fácilmente una ciudad o país y obtener actualizaciones meteorológicas en tiempo real, incluida la temperatura, la humedad, la velocidad del viento y una descripción.',
