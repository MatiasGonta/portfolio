---
import {
    BootstrapIcon,
    MaterialIcon,
    ReactQueryIcon,
    ReactRouterIcon,
    ChartJSIcon,
    AxiosIcon,
    MongooseIcon,
    NextIntlIcon,
    TremorIcon,
    DndKitIcon,
    JWTIcon,
    ReactHookFormIcon,
    ZodIcon,
    ResendIcon,
    SonnerIcon,
    TailwindMergeIcon,
    LucideReactIcon,
    ShadcnuiIcon,
} from "@icons/tech/TechIcons";

const techs = [
    {
        name: 'Bootstrap',
        href: "https://getbootstrap.com/",
        style: "bg-bootstrap",
        icon: BootstrapIcon,
    },
    {
        name: 'MaterialUI',
        href: "https://mui.com/",
        style: "bg-materialui",
        icon: MaterialIcon,
    },
    {
        name: 'ReactQuery',
        href: "https://tanstack.com/query/latest",
        style: "bg-reactquery",
        icon: ReactQueryIcon,
    },
    {
        name: 'ReactRouter',
        href: "https://reactrouter.com/en/main",
        style: "bg-reactrouter",
        icon: ReactRouterIcon,
    },
    {
        name: 'ChartJS',
        href: "https://www.chartjs.org/docs/latest/",
        style: "bg-chartjs",
        icon: ChartJSIcon,
    },
    {
        name: 'Zod',
        href: "https://reactjs.org/",
        style: "bg-zod",
        icon: ZodIcon,
    },
    {
        name: 'Resend',
        href: "https://resend.com/",
        style: "bg-resend",
        icon: ResendIcon,
    },
    {
        name: 'Tailwind Merge',
        href: "https://www.npmjs.com/package/tailwind-merge",
        style: "bg-tailwindmerge",
        icon: TailwindMergeIcon,
    },
    {
        name: 'Lucide React',
        href: "https://lucide.dev/guide/packages/lucide-react",
        style: "bg-lucidereact",
        icon: LucideReactIcon,
    },
    {
        name: 'Axios',
        href: "https://axios-http.com/",
        style: "bg-axios",
        icon: AxiosIcon,
    },
    {
        name: 'Mongoose',
        href: "https://mongoosejs.com/",
        style: "bg-mongoose",
        icon: MongooseIcon,
    },
    {
        name: 'NextIntl',
        href: "https://next-intl-docs.vercel.app/",
        style: "bg-nextintl",
        icon: NextIntlIcon,
    },
    {
        name: 'Tremor',
        href: "https://www.tremor.so/",
        style: "bg-tremor",
        icon: TremorIcon,
    },
    {
        name: 'DndKit',
        href: "https://dndkit.com/",
        style: "bg-dndkit",
        icon: DndKitIcon,
    },
    {
        name: 'JWT',
        href: "https://jwt.io/",
        style: "bg-jwt",
        icon: JWTIcon,
    },
    {
        name: 'React Hook Form',
        href: "https://react-hook-form.com/",
        style: "bg-reacthookform",
        icon: ReactHookFormIcon,
    },
    {
        name: 'Sonner',
        href: "https://sonner.emilkowal.ski/",
        style: "bg-sonner",
        icon: SonnerIcon,
    },
    {
        name: 'Shadcn/ui',
        href: "https://ui.shadcn.com/",
        style: "bg-shadcnui",
        icon: ShadcnuiIcon,
    }
];

const techsFirstHalf = [ ...techs.slice(0, 9), ...techs.slice(0, 9) ];
const techsSecondHalf = [ ...techs.slice(9), ...techs.slice(9) ];
---

<div class="flex flex-col justify-start gap-4 w-[250px] h-[100px] rotate-45 absolute -top-5 -right-20 overflow-hidden rounded-xl z-10">
    <div class="flex flex-col justify-center items-center gap-2 w-fit h-full whitespace-nowrap overflow-hidden absolute inset-0">
        <div class="flex justify-center items-center gap-2.5 w-fit animate-slide">
            {
                techsFirstHalf.map(({ name, href, style, icon: Icon }) => (
                    <a class="size-10 outline-none" href={href} target="_blank" tabindex="-1">
                        <div class="transition-all duration-300 cursor-pointer hover:scale-105">
                            <div class={`size-10 p-1 rounded ${style}`}>
                                <Icon />
                            </div>
                            <span class="size-0 absolute opacity-0 pointer-events-none">{name}</span>
                        </div>
                    </a>
                ))
            }
        </div>
        <div class="flex justify-center items-center gap-2.5 w-fit animate-[slide_21s_infinite_linear]">
            {
                techsSecondHalf.map(({ name, href, style, icon: Icon }) => (
                    <a class="size-10 outline-none" href={href} target="_blank" tabindex="-1">
                        <div class="transition-all duration-300 cursor-pointer hover:scale-105">
                            <div class={`size-10 p-1 rounded ${style}`}>
                                <Icon />
                            </div>
                            <span class="size-0 absolute opacity-0 pointer-events-none">{name}</span>
                        </div>
                    </a>
                ))
            }
        </div>
    </div>
</div>
